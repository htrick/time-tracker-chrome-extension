{
    "name": "Website Time Tracker",
    "version": "1.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["js/content.js"]
        }
    ],
    "browser_action": {
        "default_title": "Website Time Tracker"
    },
    "background": {
        "scripts": ["js/background.js"]
    },
    "permissions": ["tabs"]
}
